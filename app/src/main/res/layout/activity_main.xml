<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="*"
    android:background="#0C0C0C">
    <TableRow>
        <TextView
            android:id="@+id/textviewhienthi"
            android:layout_span="4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom|right"
            android:textColor="#fff"
            android:textSize="40sp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/textviewketqua"
            android:layout_span="4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom|right"
            android:textColor="#fff"
            android:textSize="40sp"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="5dp"
            android:background="@drawable/custom_button2"
            android:id="@+id/buttonAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:background="@drawable/custom_button2"
            android:id="@+id/buttondaodau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:background="@drawable/custom_button2"
            android:id="@+id/buttonphantram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button3"
            android:id="@+id/buttonchia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="50sp"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button3"
            android:id="@+id/buttonnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="50sp"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button3"
            android:id="@+id/buttontru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="50sp"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button3"
            android:id="@+id/buttoncong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="50sp"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:layout_span="2"
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/buttoncham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="50sp"/>
        <Button
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button3"
            android:id="@+id/buttonbang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="50sp"/>
    </TableRow>
</TableLayout>